@model WebSellWatch.Models.Page

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="AdminPages" asp-action="Index" class="breadcrumb-item">Danh sách Page</a>
            <span class="breadcrumb-item active">Thông tin Page : @Model.PageName</span>
        </nav>
    </div>
</div>

<div class="page-header no-gutters has-tab">
    <div class="d-md-flex m-b-15 align-items-center justify-content-between">
        <div class="media align-items-center m-b-15">
            <div class="avatar avatar-image rounded" style="height:70px; width:70px">
                <img src="~/images/pages/@Model.Thumb" alt="@Model.Title" />
            </div>
            <div class="card-body">
                <h4 class="card-title">Thông tin sản phẩm : @Model.PageName</h4>
                <div class="table-responsive">
                    <table class="product-info-table m-t-20">
                        <tbody>
                            <tr>
                                <td>ID:</td>
                                <td class="text-dark font-weight-semibold">@Model.PageName</td>
                            </tr>
                            <tr>
                                <td>Tên sản phẩm:</td>
                                <td>@Model.Ordering</td>
                            </tr>
                            <tr>
                                <td>Mô tả ngắn:</td>
                                <td>@Model.MetaKey</td>
                            </tr>
                            <tr>
                                <td>Giá:</td>
                                <td>@Model.Thumb</td>
                            </tr>
                            <tr>
                                <td>Discount:</td>
                                <td>@Model.Contents</td>
                            </tr>
                            </tbody>
                            </table>
        </div>
        <div class="m-b-15">
            <a class="btn btn-primary" asp-area="Admin" asp-controller="AdminPages" asp-action="Edit" asp-route-id="@Model.PageId">Edit</a>
        </div>
    </div>
</div>

@model List<Product>

@if (Model != null)
{
    foreach (var item in Model)
    {
                    <tr>
                        <td>@item.ProductId</td>
                        <td>@item.ProductName</td>
                        <td>@item.Price.Value.ToString("#,##0") VNG </td>
                        <td>@item.Cat.CatName</td>
                        <td>@item.UnitsInStock</td>
                        <td>
                @if (item.UnitsInStock.Value > 0)
                {
                                <div class="d-flex align-items-center" style="text-align:center">
                                    <div class="badge badge-success badge-dot m-r-10"></div>
                                    <div>In Stock</div>
                                </div>
                }
                else
                {
                                <div class="d-flex align-items-center">
                                    <div class="badge badge-danger badge-dot m-r-10"></div>
                                    <div>Out Stock</div>
                                </div>
                }
                        </td>
                        <td>
                            <a class="btn btn-primary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminProducts" asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
                            <a class="btn btn-success btn-tone m-r-5" asp-area="Admin" asp-controller="AdminProducts" asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
                            <a class="btn btn-danger btn-tone m-r-5" asp-area="Admin" asp-controller="AdminProducts" asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
                        </td>
                    </tr>
    }

}
        </tbody>
    </table>

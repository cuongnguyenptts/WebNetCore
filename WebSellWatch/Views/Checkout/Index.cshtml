@model WebSellWatch.ModelViews.MuaHangVM
@{
    ViewData["Title"] = "Mua hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<WebSellWatch.ModelViews.CartItem> Carts = ViewBag.GioHang;
}

@model PagedList.Core.IPagedList<WebSellWatch.Models.TinDang>
@using PagedList.Core.Mvc
@{
    ViewData["TiTle"] = "Blog - " + ViewBag.CurrentPage;
    Layout = "~/Views/Shared/_Layout.cshtml";
    int PageCurrent = ViewBag.CurrentPage;
    int PageNext = PageCurrent + 1;

}

<!--breadcrumbs area start-->
<div class="breadcrumbs_area breadcrumbs_blog" style="margin-top: 100px">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content text-center">
                    <ul>
                        <li><a href="index.html">Trang Chủ</a></li>
                        <li><a href="blog.html">Tin Tức</a></li>
                    </ul>
                    <h3>Viết & Chia sẻ <br> Thảo Luận</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<!--breadcrumbs area end-->
<!--blog page section start-->
<div class="blog_page_section mb-140">
    <div class="container">
        <div class="blog_messonry_button d-flex justify-content-center">
            <button class="active" data-filter="*">Tất Cả</button>
            <button data-filter=".news">Mới Nhất </button>
            <button data-filter=".products">Sản Phẩm </button>
            <button data-filter=".community">Cộng Đồng</button>
        </div>
        <div class="row blog_page_gallery">
            @if(Model != null )
            {
                foreach(var item in Model)
                {
                    string url = $"/tintuc/{item.Alias}-{item.PostId}.html";
                    <div class="col-lg-4 col-md-6 col-sm-6 gird_item nspiration community">
                        <article class="single_blog products community">
                            <figure>
                                <div class="blog_thumb">
                                    <a href="@url"><img src="~/images/news/@item.Thumb" alt=""></a>
                                </div>
                                <figcaption class="blog_content">
                                    <div class="blog_meta">
                                        <ul class="d-flex">
                                            <li><span class="meta_tag">News</span></li>
                                            <li><span>@item.CreatedDate.Value.ToLongDateString()</span></li>
                                        </ul>
                                    </div>
                                    <h3><a href="@url">@item.Title</a></h3>
                                </figcaption>
                            </figure>
                        </article>
                    </div>
                }
            }
           

        </div>
        <div class="pagination_style pagination blog_pagination justify-content-center">
            <ul class="d-flex">
                <li><a class="current" href="/blog.html?page=@PageCurrent">@PageCurrent</a></li>
                <li><a href="/blogs.html?page=@PageNext">@PageNext</a></li>
                <li><a href="/blogs.html?page=@PageNext" aria-label="Next">>></a></li>
            </ul>
        </div>
    </div>
</div>
<section class="newsletter_section newsletter_padding border-top">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="newsletter_inner d-flex justify-content-between align-items-center">
                    <div class="newsletter_text">
                        <h3>Đăng kí ngay</h3>
                        <p>Nhận tin tức mới nhất bản tin của chúng tôi</p>
                    </div>
                    <div class="newsletter_subscribe">
                        <form id="mc-form">
                            <input class="border-0" id="mc-email" type="email" autocomplete="off" placeholder="Enter your email address">
                            <i class="icon-envelope-open icons"></i>
                            <button class="border-0" id="mc-submit">Đăng Kí</button>
                        </form>
                        <!-- mailchimp-alerts Start -->
                        <div class="mailchimp-alerts text-centre">
                            <div class="mailchimp-submitting"></div><!-- mailchimp-submitting end -->
                            <div class="mailchimp-success"></div><!-- mailchimp-success end -->
                            <div class="mailchimp-error"></div><!-- mailchimp-error end -->
                        </div><!-- mailchimp-alerts end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--newsletter section end-->
<!--blog page section end-->
